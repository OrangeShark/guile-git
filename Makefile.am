include guile.am

moddir=$(prefix)/share/guile/site/$(GUILE_EFFECTIVE_VERSION)
godir=$(libdir)/guile/$(GUILE_EFFECTIVE_VERSION)/ccache

SOURCES =                           \
  git/annotated.scm                 \
  git/attr.scm                      \
  git/bindings.scm                  \
  git/blame.scm                     \
  git/branch.scm                    \
  git/checkout.scm                  \
  git/commit.scm                    \
  git/config.scm                    \
  git/reference.scm                 \
  git/repository.scm                \
  git/struct.scm                    \
  git/tree.scm                      \
  git/types.scm

TESTS =                             \
  tests/commit.scm                  \
  tests/reference.scm               \
  tests/repository.scm

TEST_EXTENSIONS = .scm

SCM_LOG_COMPILER = $(top_builddir)/test-env $(GUILE)
AM_SCM_LOG_FLAGS = --no-auto-compile -L "$(top_srcdir)"

EXTRA_DIST +=                       \
  README.md                         \
  pre-inst-env.in                   \
  guix.scm
